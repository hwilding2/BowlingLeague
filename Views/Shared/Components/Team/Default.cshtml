@{
}
@model IEnumerable<Team>
@* if selected, highlight; write a conditional tag helper *@

<div class="text-center">
    <a asp-action="Index" asp-controller="Home" asp-route-teamId="" class="btn btn-outline-secondary btn-sm btn-block">Home</a>
    <br />
    @foreach (var x in Model)
    {
        <a asp-action="Index" 
           asp-controller="Home" 
           asp-route-teamId="@x.TeamId" 
           asp-route-teamName="@x.TeamName" 
           class=@(x.TeamName == ViewBag.ActiveTeam ? "btn btn-primary btn-sm btn-block" : "btn btn-outline-secondary btn-sm btn-block")>@x.TeamName</a>
        <br />
    }
</div>